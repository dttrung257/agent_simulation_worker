server:
  port: 9998

logging:
  level:
    root: INFO
    redis:
      clients:
        jedis: DEBUG
  file:
    path: storage/logs

# Config database
spring:
  datasource:
    url: jdbc:mysql://host.docker.internal:13306/ags?rewriteBatchedStatements=true
    username: agsuser
    password: 123
    driver-class-name: com.mysql.cj.jdbc.Driver
  jpa:
    hibernate:
      ddl-auto: validate
    show_sql: true
    properties:
      hibernate:
        dialect: org.hibernate.dialect.MySQL8Dialect
        jdbc:
          batch_size: 1000
        order_inserts: true
        order_updates: true
        generate_statistics: false
      format_sql: true
  data:
